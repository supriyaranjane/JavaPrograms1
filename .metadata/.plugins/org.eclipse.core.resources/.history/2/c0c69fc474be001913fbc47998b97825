package com.bridgelabz.functional;

import com.bridgelabz.utility.Utility;

public class MathFunction {


	public static void  binary(int n)
	{
			
			int a =0,count=0;
			String s=" ";
			while(n >0)
			{
				a=n%2;
				if(a==1)
				{
					count++;
				}
				
			s=s+""+a;
			n=n/2;
				
		  
			
			}

			System.out.println("The binary Number is:"+s);
	}
			
